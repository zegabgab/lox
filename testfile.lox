class Cake {
  init(flavor) {
    if (flavor == nil) {
      this.flavor = "mysterious";
      return;
    }
    this.flavor = flavor;
  }

  taste() {
    var adjective = "delicious";
    print "The " + this.flavor + " cake is " + adjective + "!";
  }
}

var unspecified = Cake(nil);
var cake = Cake("nutcase");
var taste = cake.taste;
cake.flavor = "German chocolate";
taste();
unspecified.taste();